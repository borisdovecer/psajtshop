<div class="shop-layout-3" id="page">
    <% include ../partials/header.ejs %>

    <section >
        <div class="container" style="width: 100%">
            <div class="row">


                <div class="col-md-8 col-sm-12 col-xs-12">

                    <div class="container text-left" style="width: 100%">

                        <div class="row form-contact">
                            <div class="row main">
                                <form ref='uploadForm'
                                      id='uploadForm'
                                      action='/admin/create'
                                      method='post'
                                      encType="multipart/form-data">
                                    <div class="col-md-6">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Naslov: </label>
                                            <input class="form-control" name="title" id="title" type="text">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Opis: </label>
                                            <textarea class="form-control" id="description" name="description" ></textarea>
                                            <script>
                                                CKEDITOR.replace( 'description' );
                                            </script>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Sadr≈æaj: </label>
                                            <textarea class="form-control"  name="content_text" id="content_text"  rows="3"></textarea>
                                            <script>
                                                CKEDITOR.replace( 'content_text' );
                                            </script>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Slika: </label>
                                        <div class="form-group organic-form xs-radius">
                                            <input type="file" name="img" id="img">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group organic-form xs-radius">
                                            <button class="btn btn-brand pill" type="submit" name="Submit">Dodaj</button>
